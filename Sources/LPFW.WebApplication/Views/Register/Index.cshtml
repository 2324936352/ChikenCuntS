@model LPFW.WebApplication.Models.Account.RegisterCheckVM

<section class="section">
    <div class="section-header">
        <h1>注册用户资料，成为平台参与者 </h1>
    </div>
    <div class="section-body" style="margin-top:-20px">
    </div>
</section>

<div class="row">
    <div class="col-12">
        <form class="wizard-content mt-2" action="/Register/RegisterCheck" method="post">
            <div class="card" id="registerView" style="margin-bottom:5px">
                <div class="card-body">
                    <div class="row mt-3">
                        <div class="col-12 col-lg-10 offset-lg-1">
                            <div class="wizard-steps">
                                <div class="wizard-step wizard-step-active">
                                    <div class="wizard-step-icon">
                                        <i class="fas fa-file"></i>
                                    </div>
                                    <div class="wizard-step-label" style="font-size:13px">
                                        确认服务条款
                                    </div>
                                </div>
                                <div class="wizard-step wizard-step">
                                    <div class="wizard-step-icon">
                                        <i class="fas fa-random"></i>
                                    </div>
                                    <div class="wizard-step-label" style="font-size:13px">
                                        选择申请种类
                                    </div>
                                </div>
                                <div class="wizard-step wizard-step">
                                    <div class="wizard-step-icon">
                                        <i class="fas fa-box-open"></i>
                                    </div>
                                    <div class="wizard-step-label" style="font-size:13px">
                                        提交注册资料
                                    </div>
                                </div>
                                <div class="wizard-step">
                                    <div class="wizard-step-icon">
                                        <i class="far fa-user"></i>
                                    </div>
                                    <div class="wizard-step-label" style="font-size:13px">
                                        创建体验用户
                                    </div>
                                </div>
                                <div class="wizard-step">
                                    <div class="wizard-step-icon">
                                        <i class="fas fa-server"></i>
                                    </div>
                                    <div class="wizard-step-label" style="font-size:13px">
                                        体验系统
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-10 offset-lg-1" style="border-top-style:dotted;border-top-color:lightgray;border-top-width:1px;padding-top:16px">
                        <h5>请仔细阅读以下服务条款</h5>
                        服务声明说明文字
                    </div>
                </div>

                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-lg-10 offset-lg-1" style="border-top-style:dotted;border-top-color:lightgray;border-top-width:1px;padding-top:16px">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" name="Agree" class="custom-control-input" id="Agree" value="true">
                                <label class="custom-control-label" for="Agree" style="font-size:16px">我已阅读服务协议，同意以上服务条款。</label>
                                <button type="submit" class="float-right btn btn-icon icon-right btn-primary">下一步 <i class="fas fa-arrow-right"></i></button>
                            </div>
                            <span class="text-danger">@ViewData["TipString"]</span>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script>
        // 加载入口页时需要处理的基本控件
        $(function () {
            // 当浏览器大小变化时，重新设置相关的 div 的高度
            window.onresize = function (event) {
                //resetThisViewHeight();
            };

            // 设置相关的 div 的高度
            //resetThisViewHeight();
        });

        function resetThisViewHeight() {
           // 获取浏览器内容区高度
            var browserHeight = window.innerHeight;
            var divHeight = browserHeight - 318;
            document.getElementById("registerView").style.height = divHeight+"px";
        }

    </script>
}