<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>@ViewData["Title"] - LightPoint Team</title>

    <!-- BootStrap 常规样式 -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <!-- FontAwesome 图标库 -->
    <link rel="stylesheet" href="~/lib/fontAwesome/css/all.css">

    <!-- 富文本编辑器 -->
    <!-- 上传文件 -->
    <!-- 简单的地图 -->
    <!-- 日期选择器 -->
    <!-- 模板样式 -->
    <link rel="stylesheet" href="~/lib/stisla/css/style.css">
    <link rel="stylesheet" href="~/lib/stisla/css/components.css">

    <!-- 系统定制的样式表 -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="Shortcut Icon" href="~/LightPoint.ico">
</head>

<body class="layout-3">
    <div id="app">
        <div class="main-wrapper container">
            <div class="navbar-bg"></div>
            <nav class="navbar navbar-expand-lg main-navbar">
                <a href="~/Home" class="navbar-brand sidebar-gone-hide">柳州在线教学综合服务平台</a>
                <div class="navbar-nav">
                    <a href="#" class="nav-link sidebar-gone-show" data-toggle="sidebar"><i class="fas fa-bars"></i></a>
                </div>
                <div class="nav-collapse">
                </div>
                <form class="form-inline ml-auto"></form>
                <ul class="navbar-nav navbar-right float-right">
                    <li class="dropdown">
                        <!-- 用户简要信息 -->
                        @await Component.InvokeAsync("LoginUserInfo")
                        <!-- /用户简要信息 -->
                    </li>
                </ul>
            </nav>
            <nav class="navbar navbar-secondary navbar-expand-lg">
                <div class="container">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a href="#" class="nav-link"><i class="far fa-heart"></i><span>首页</span></a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link"><i class="far fa-heart"></i><span>公司新闻</span></a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link"><i class="far fa-heart"></i><span>培训服务</span></a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link"><i class="far fa-heart"></i><span>联系我们</span></a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="main-content">
                @RenderBody()
            </div>

            <div class="container" style="width: 100%; z-index:0"> <!-- fixed-bottom -->
                <div class="row">
                    <div class="col-12">
                        <div style="height:40px;border-top-style:dotted;border-top-color:lightgray;border-top-width:1px;padding:8px;padding-right:35px;background-color:whitesmoke;">
                            <div class="">
                                版权 &copy; 2019 <div class="bullet"></div> LightPoint 软件工作室 <div class="bullet"></div> 当前目标版本 1.30
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 通用的脚本库 -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popperJS/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery-nicescroll/jquery.nicescroll.min.js"></script>
    <script src="~/lib/momentJS/moment.min.js"></script>
    <script src="~/lib/stisla/js/stisla.js"></script>


    <!-- Page Specific JS File -->
    <!-- 模板脚本库 -->
    <script src="~/lib/stisla/js/scripts.js"></script>
    <script src="~/lib/stisla/js/custom.js"></script>

    <!-- 本系统开发所用的脚本库 -->
    <script src="~/js/appFunction.js"></script>
    <script src="~/js/appFunctionForCommon.js"></script>
    <script src="~/js/appFunctionForPagination.js"></script>
    <script src="~/js/appFunctionForUpload.js"></script>
    <!-- 地址选择器 -->
    <script src="~/js/appChineseArea.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
